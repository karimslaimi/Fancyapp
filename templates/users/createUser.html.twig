{% extends 'template.html.twig' %}


{% block body %}
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register Card -->
            <div class="card">
                <div class="card-body">



                    {{ form_start(form) }}
                    <div class="mb-3">

                        <label for="username" class="form-label">Nom</label>
                        {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}

                    </div>

                    <div class="mb-3">

                        <label for="username" class="form-label">Prenom</label>
                        {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.prenom,{'attr':{'class':'text-danger'}}) }}

                    </div>
                    <div class="mb-3">

                        <label for="username" class="form-label">Date de naissance</label>
                        {{ form_widget(form.dateNaiss,{'attr':{'class':'form-control','id':'html5-date-input'}}) }}
                        {{ form_errors(form.dateNaiss,{'attr':{'class':'text-danger'}}) }}

                    </div>



                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        {{ form_widget(form.email,{attr:{'class':'form-control'}}) }}
                        {{ form_errors(form.email,{attr:{'class':'text-danger'}}) }}

                    </div>
                    <div class="mb-3 form-password-toggle">
                        <label class="form-label" for="password">Password</label>
                        {{ form_widget(form.password.first,{attr:{'class':'form-control'}}) }}
                        {{ form_errors(form.password.first,{attr:{'class':'text-danger'}}) }}

                    </div>
                    <div class="mb-3 form-password-toggle">
                        <label class="form-label" for="password">Confirm Password</label>
                        {{ form_widget(form.password.second,{attr:{'class':'form-control'}}) }}
                        {{ form_errors(form.password.second,{attr:{'class':'text-danger'}}) }}

                    </div>
                    {{ form_widget(form.Ajouter,{attr:{'class':'btn btn-primary d-grid w-100'}}) }}

                    {{ form_end(form) }}


                </div>
            </div>
            <!-- Register Card -->
        </div>
    </div>


{% endblock %}
